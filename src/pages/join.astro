---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Join the Interest List | Sol Village">
	<main class="page">


		<section class="form-section">

			<form class="signup-form" id="interest-form" method="POST" action="/.netlify/functions/join-interest-list">
				<h1>Join Our Interest List</h1>
				<p class="form-description">
					We'll keep you updated on our progress and let you know about upcoming opportunities. 
					We respect your privacy and won't share your information.
				</p>

				<div id="form-message" class="form-message" style="display: none;"></div>

				<div class="form-grid">
					<div class="field-group">
						<label for="firstName">First Name *</label>
						<input type="text" id="firstName" name="firstName" required />
					</div>

					<div class="field-group">
						<label for="lastName">Last Name *</label>
						<input type="text" id="lastName" name="lastName" required />
					</div>

					<div class="field-group">
						<label for="email">Email Address *</label>
						<input type="email" id="email" name="email" required />
					</div>

					<div class="field-group">
						<label for="phone">Phone Number</label>
						<input type="tel" id="phone" name="phone" />
					</div>

					<div class="field-group span-2">
						<label for="reason">What interests you most about Sol Village?</label>
						<select id="reason" name="reason">
							<option value="">Select an option</option>
							<option value="affordability">Affordable housing</option>
							<option value="community">Community-focused living</option>
							<option value="sustainability">Sustainable practices</option>
							<option value="tiny-homes">Tiny home design</option>
							<option value="investment">Investment opportunity</option>
							<option value="living">Future residence</option>
							<option value="other">Other</option>
						</select>
					</div>

					<div class="field-group span-2">
						<label for="message">Tell us more about yourself (optional)</label>
						<textarea id="message" name="message" rows="4" placeholder="What brings you to Nevada County? What are you looking for in a community?"></textarea>
					</div>

					<div class="field-group span-2">
						<label class="checkbox-label">
							<input type="checkbox" name="newsletter" checked />
							<span class="checkmark"></span>
							Send me updates about Sol Village news and events
						</label>
					</div>

					<div class="field-group span-2">
						<label class="checkbox-label">
							<input type="checkbox" name="privacy" required />
							<span class="checkmark"></span>
							I agree to the <a href="/privacy" target="_blank">Privacy Policy</a> and understand how my information will be used *
						</label>
					</div>
				</div>

				<button type="submit" class="cta-primary" id="submit-btn">Join the Interest List</button>

				<p class="form-note">
					Have questions? Feel free to <a href="mailto:travis@sollearning.com">email us directly</a>.
				</p>
			</form>
		</section>

		<!-- Success Modal -->
		<div id="success-modal" class="modal" style="display: none;">
			<div class="modal-overlay"></div>
			<div class="modal-content">
				<div class="modal-header">
					<div class="success-icon">âœ“</div>
					<h3>Welcome to Sol Village!</h3>
				</div>
				<div class="modal-body">
					<p>Thank you for joining our interest list! We're excited to have you as part of our community.</p>
					<p>We'll keep you updated on our progress and let you know about upcoming opportunities to get involved.</p>
				</div>
				<div class="modal-footer">
					<button type="button" class="modal-close-btn" id="close-modal">Got it!</button>
				</div>
			</div>
		</div>

		<script>
			document.getElementById('interest-form').addEventListener('submit', async function(e) {
				e.preventDefault();
				
				const form = e.target;
				const submitBtn = document.getElementById('submit-btn');
				const messageDiv = document.getElementById('form-message');
				const successModal = document.getElementById('success-modal');
				
				// Show loading state
				submitBtn.textContent = 'Joining...';
				submitBtn.disabled = true;
				messageDiv.style.display = 'none';
				
				try {
					const formData = new FormData(form);
					const response = await fetch('/.netlify/functions/join-interest-list', {
						method: 'POST',
						body: formData
					});
					
					const result = await response.json();
					
					if (result.success) {
						// Show success modal with animation
						successModal.style.display = 'block';
						document.body.style.overflow = 'hidden'; // Prevent background scrolling
						
						// Trigger animation after a brief delay
						setTimeout(() => {
							successModal.classList.add('show');
						}, 10);
						
						// Reset form
						form.reset();
					} else {
						// Show error message
						messageDiv.className = 'form-message error';
						messageDiv.textContent = result.error || 'Something went wrong. Please try again.';
						messageDiv.style.display = 'block';
					}
				} catch (error) {
					// Show error message
					messageDiv.className = 'form-message error';
					messageDiv.textContent = 'Something went wrong. Please try again.';
					messageDiv.style.display = 'block';
				} finally {
					// Reset button state
					submitBtn.textContent = 'Join the Interest List';
					submitBtn.disabled = false;
				}
			});

			// Function to close modal with animation
			function closeModal() {
				const successModal = document.getElementById('success-modal');
				successModal.classList.remove('show');
				
				// Wait for animation to complete before hiding
				setTimeout(() => {
					successModal.style.display = 'none';
					document.body.style.overflow = 'auto'; // Restore scrolling
				}, 300);
			}

			// Modal close functionality
			document.getElementById('close-modal').addEventListener('click', closeModal);

			// Close modal when clicking overlay
			document.querySelector('.modal-overlay').addEventListener('click', closeModal);

			// Close modal with Escape key
			document.addEventListener('keydown', function(e) {
				if (e.key === 'Escape') {
					const successModal = document.getElementById('success-modal');
					if (successModal.style.display === 'block') {
						closeModal();
					}
				}
			});
		</script>
		</section>
	</main>
</Layout>

<style>
	.page {
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		gap: 60px;
		padding: 120px clamp(24px, 5vw, 120px) 96px;
		box-sizing: border-box;
	}



	.form-section {
		max-width: 800px;
		margin: 0 auto;
		width: 100%;
	}

	.signup-form {
		padding: 48px clamp(24px, 8vw, 64px);
		border-radius: 32px;
		background: rgba(255, 255, 255, 0.95);
		box-shadow: 0 24px 48px rgba(31, 42, 28, 0.12);
		backdrop-filter: blur(4px);
	}

	.signup-form h1 {
		margin: 0 0 16px;
		font-family: 'Playfair Display', Georgia, serif;
		font-size: clamp(30px, 5vw, 44px);
		color: #3a5a40;
		text-align: center;
	}

	.form-description {
		margin: 0 0 40px;
		font-size: 18px;
		line-height: 1.7;
		color: #495443;
		text-align: center;
	}

	.form-grid {
		display: grid;
		gap: 24px;
		grid-template-columns: repeat(2, 1fr);
		margin-bottom: 40px;
	}

	.field-group {
		display: flex;
		flex-direction: column;
		gap: 8px;
	}

	.field-group.span-2 {
		grid-column: span 2;
	}

	label {
		font-weight: 600;
		color: #3a5a40;
		font-size: 14px;
	}

	input,
	select,
	textarea {
		font-family: inherit;
		padding: 14px 18px;
		border: 1px solid rgba(58, 90, 64, 0.2);
		border-radius: 12px;
		font-size: 16px;
		transition: border-color 0.2s ease, box-shadow 0.2s ease;
		background: rgba(255, 255, 255, 0.8);
	}

	input:focus,
	select:focus,
	textarea:focus {
		outline: none;
		border-color: #3a5a40;
		box-shadow: 0 0 0 3px rgba(58, 90, 64, 0.1);
	}

	textarea {
		resize: vertical;
		min-height: 120px;
		font-family: inherit;
		line-height: 1.6;
	}

	.checkbox-label {
		display: flex;
		align-items: flex-start;
		gap: 12px;
		cursor: pointer;
		font-weight: 500;
		line-height: 1.5;
		color: #495443;
	}

	.checkbox-label input[type="checkbox"] {
		margin: 0;
		width: 18px;
		height: 18px;
		flex-shrink: 0;
		margin-top: 2px;
		accent-color: #3a5a40;
	}

	.checkbox-label a {
		color: #3a5a40;
		text-decoration: underline;
	}

	.checkbox-label a:hover {
		color: #2c4531;
	}

	.cta-primary {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		padding: 16px 32px;
		border-radius: 999px;
		font-weight: 600;
		font-size: 18px;
		text-decoration: none;
		transition: transform 0.2s ease, box-shadow 0.2s ease, background 0.2s ease;
		background: linear-gradient(135deg, #3a5a40, #a3b18a);
		color: #fffef6;
		box-shadow: 0 12px 24px rgba(58, 90, 64, 0.35);
		border: none;
		cursor: pointer;
		width: 100%;
		max-width: 300px;
		margin: 0 auto 24px;
	}

	.cta-primary:hover {
		transform: translateY(-2px);
		box-shadow: 0 16px 28px rgba(58, 90, 64, 0.4);
	}

	.form-note {
		margin: 24px 0 0;
		font-size: 14px;
		color: #6b705c;
		text-align: center;
	}

	.form-note a {
		color: #3a5a40;
		text-decoration: underline;
	}

	.form-note a:hover {
		color: #2c4531;
	}

	.form-message {
		padding: 16px 20px;
		border-radius: 12px;
		margin-bottom: 24px;
		font-weight: 500;
		text-align: center;
	}

	.form-message.success {
		background: rgba(58, 90, 64, 0.1);
		color: #2c4531;
		border: 1px solid rgba(58, 90, 64, 0.2);
	}

	.form-message.error {
		background: rgba(220, 38, 38, 0.1);
		color: #dc2626;
		border: 1px solid rgba(220, 38, 38, 0.2);
	}

	/* Modal Styles */
	.modal {
		position: fixed;
		top: 0;
		left: 0;
		width: 100vw;
		height: 100vh;
		z-index: 1000;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 20px;
		box-sizing: border-box;
		margin: 0;
	}

	.modal-overlay {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: rgba(0, 0, 0, 0.6);
		backdrop-filter: blur(4px);
	}

	.modal-content {
		position: relative;
		background: #fffef6;
		border-radius: 24px;
		padding: 0;
		max-width: 500px;
		width: 100%;
		box-shadow: 0 32px 64px rgba(0, 0, 0, 0.3);
		transform: scale(0.9);
		opacity: 0;
		transition: transform 0.3s ease, opacity 0.3s ease;
	}

	.modal.show .modal-content {
		transform: scale(1);
		opacity: 1;
	}

	.modal-header {
		padding: 40px 40px 20px;
		text-align: center;
		border-bottom: 1px solid rgba(58, 90, 64, 0.1);
	}

	.success-icon {
		width: 80px;
		height: 80px;
		border-radius: 50%;
		background: linear-gradient(135deg, #3a5a40, #a3b18a);
		color: #fffef6;
		display: flex;
		align-items: center;
		justify-content: center;
		font-size: 36px;
		font-weight: bold;
		margin: 0 auto 20px;
		box-shadow: 0 12px 24px rgba(58, 90, 64, 0.3);
	}

	.modal-header h3 {
		margin: 0;
		font-family: 'Playfair Display', Georgia, serif;
		font-size: 28px;
		color: #3a5a40;
		font-weight: 600;
	}

	.modal-body {
		padding: 30px 40px;
		text-align: center;
	}

	.modal-body p {
		margin: 0 0 16px;
		font-size: 16px;
		line-height: 1.6;
		color: #495443;
	}

	.modal-body p:last-child {
		margin-bottom: 0;
	}

	.modal-footer {
		padding: 20px 40px 40px;
		text-align: center;
		border-top: 1px solid rgba(58, 90, 64, 0.1);
	}

	.modal-close-btn {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		padding: 14px 32px;
		border-radius: 999px;
		font-weight: 600;
		font-size: 16px;
		text-decoration: none;
		transition: transform 0.2s ease, box-shadow 0.2s ease, background 0.2s ease;
		background: linear-gradient(135deg, #3a5a40, #a3b18a);
		color: #fffef6;
		box-shadow: 0 8px 16px rgba(58, 90, 64, 0.3);
		border: none;
		cursor: pointer;
		min-width: 120px;
	}

	.modal-close-btn:hover {
		transform: translateY(-2px);
		box-shadow: 0 12px 20px rgba(58, 90, 64, 0.4);
	}

	.modal-close-btn:active {
		transform: translateY(0);
	}

	@media (max-width: 768px) {
		.page {
			gap: 40px;
			padding-top: 100px;
		}

		.intro {
			margin-bottom: 20px;
		}

		.intro h1 {
			font-size: clamp(28px, 6vw, 40px);
		}

		.intro-text {
			font-size: 16px;
		}

		.form-grid {
			grid-template-columns: 1fr;
		}

		.field-group.span-2 {
			grid-column: span 1;
		}

		.signup-form {
			padding: 32px 24px;
		}

		.modal {
			padding: 16px;
		}

		.modal-content {
			max-width: 100%;
		}

		.modal-header {
			padding: 30px 24px 16px;
		}

		.success-icon {
			width: 60px;
			height: 60px;
			font-size: 28px;
			margin-bottom: 16px;
		}

		.modal-header h3 {
			font-size: 24px;
		}

		.modal-body {
			padding: 24px 24px;
		}

		.modal-body p {
			font-size: 15px;
		}

		.modal-footer {
			padding: 16px 24px 30px;
		}

		.modal-close-btn {
			padding: 12px 28px;
			font-size: 15px;
		}
	}

	@media (max-width: 480px) {
		.page {
			padding: 100px 16px 80px;
		}

		.signup-form {
			padding: 24px 16px;
		}

		input,
		select,
		textarea {
			padding: 12px 14px;
			font-size: 16px;
			box-sizing: border-box;
		}

		.form-grid {
			gap: 20px;
		}

		.modal {
			padding: 12px;
		}

		.modal-header {
			padding: 24px 20px 12px;
		}

		.modal-body {
			padding: 20px;
		}

		.modal-footer {
			padding: 12px 20px 24px;
		}
	}
</style>
