---
import SolLogo from '../assets/sol-village-logo.png';
---

<nav class="navigation">
	<div class="nav-container">
		<a href="/" class="nav-logo">
			<img src={SolLogo.src} alt="Sol Village" class="logo-image" />
		</a>
		
		<ul class="nav-menu">
			<li><a href="/" class="nav-link">Home</a></li>
			<li><a href="/vision" class="nav-link">Vision</a></li>
			<li><a href="/investment" class="nav-link">Investment</a></li>
			<li><a href="/join" class="nav-link nav-cta">Join</a></li>
		</ul>
	</div>
</nav>

<style>
	.navigation {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		z-index: 1000;
		background: rgba(255, 255, 255, 0.95);
		backdrop-filter: blur(8px);
		border-bottom: 1px solid rgba(58, 90, 64, 0.1);
		padding: 0 calc(100vw / 12);
		height: 80px;
		display: flex;
		align-items: center;
	}

	.nav-container {
		width: 100%;
		max-width: 1400px;
		margin: 0 auto;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.nav-logo {
		text-decoration: none;
		transition: transform 0.2s ease;
	}

	.nav-logo:hover {
		transform: scale(1.05);
	}

	.logo-image {
		height: 180px;
		width: auto;
		transition: all 0.2s ease;
	}

	.nav-menu {
		display: flex;
		list-style: none;
		margin: 0;
		padding: 0;
		gap: 28px;
		align-items: center;
	}

	.nav-menu li {
		margin: 0;
	}

	.nav-link {
		text-decoration: none;
		color: #495443;
		font-weight: 500;
		font-size: 16px;
		transition: color 0.2s ease, transform 0.2s ease;
		position: relative;
		padding: 8px 0;
	}

	.nav-link:hover {
		color: #3a5a40;
		transform: translateY(-1px);
	}

	.nav-link::after {
		content: '';
		position: absolute;
		bottom: 4px;
		left: 0;
		width: 0;
		height: 2px;
		background: linear-gradient(135deg, #3a5a40, #a3b18a);
		transition: width 0.3s ease;
	}

	.nav-link:hover::after,
	.nav-link[aria-current="page"]::after {
		width: 100%;
	}

	.nav-link[aria-current="page"] {
		color: #3a5a40;
		font-weight: 600;
	}

	.nav-cta {
		background: linear-gradient(135deg, #3a5a40, #a3b18a);
		color: #fffef6 !important;
		padding: 12px 20px !important;
		border-radius: 999px;
		font-weight: 600;
		box-shadow: 0 8px 16px rgba(58, 90, 64, 0.25);
		transition: transform 0.2s ease, box-shadow 0.2s ease, background 0.2s ease;
	}

	.nav-cta:hover {
		transform: translateY(-2px);
		box-shadow: 0 12px 20px rgba(58, 90, 64, 0.35);
		color: #fffef6 !important;
	}

	.nav-cta::after {
		display: none;
	}

	@media (max-width: 768px) {
		.navigation {
			padding: 0 24px;
			height: 64px;
		}

		.nav-menu {
			gap: 20px;
		}

		.nav-link {
			font-size: 14px;
		}

		.nav-cta {
			padding: 10px 16px !important;
			font-size: 14px;
		}

		.logo-image {
			height: 36px;
		}
	}

	@media (max-width: 640px) {
		.navigation {
			padding: 0 20px;
			height: 60px;
		}

		.nav-menu {
			gap: 16px;
		}

		.nav-link {
			font-size: 13px;
		}

		.logo-image {
			height: 32px;
		}
	}

	@media (max-width: 480px) {
		.navigation {
			padding: 0 16px;
		}

		.nav-menu {
			gap: 12px;
		}

		.nav-link {
			font-size: 12px;
		}

		.logo-image {
			height: 28px;
		}
	}
</style>
