---
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

const { title = 'Sol Village' } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com" crossorigin />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			rel="stylesheet"
			href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Playfair+Display:wght@600&display=swap"
		/>
		<title>{title}</title>
	</head>
	<body>
		<Navigation />
		<slot />
		<Footer />
	</body>
</html>

<style>
	:root {
		color-scheme: light;
	}

	html,
	body {
		margin: 0;
		width: 100%;
		min-height: 100vh;
		font-family: 'Inter', system-ui, -apple-system, 'Segoe UI', sans-serif;
		background: #f5f5f0;
		color: #1f2a1c;
		display: flex;
		flex-direction: column;
	}

	a {
		color: inherit;
	}

	/* Universal CTA Button Styles */
	:global(.cta-primary),
	:global(.cta-secondary) {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		padding: 14px 24px;
		border-radius: 999px;
		font-weight: 600;
		text-decoration: none;
		transition: transform 0.2s ease, box-shadow 0.2s ease, background 0.2s ease;
	}

	:global(.cta-primary) {
		background: linear-gradient(135deg, #3a5a40, #a3b18a);
		color: #fffef6;
		box-shadow: 0 12px 24px rgba(58, 90, 64, 0.35);
	}

	:global(.cta-primary:hover) {
		transform: translateY(-2px);
		box-shadow: 0 16px 28px rgba(58, 90, 64, 0.4);
	}

	:global(.cta-secondary) {
		background: rgba(255, 255, 255, 0.6);
		color: #3a5a40;
		border: 1px solid rgba(58, 90, 64, 0.2);
	}

	:global(.cta-secondary:hover) {
		transform: translateY(-2px);
		background: rgba(255, 255, 255, 0.85);
	}

	/* Universal Callout Styles */
	:global(.callout) {
		text-align: center;
		padding: 56px clamp(24px, 8vw, 120px);
		border-radius: 32px;
		background: linear-gradient(135deg, rgba(58, 90, 64, 0.92), rgba(163, 177, 138, 0.92));
		color: #fffef6;
		box-shadow: 0 24px 48px rgba(34, 52, 32, 0.45);
	}

	:global(.callout h2) {
		margin: 0 0 16px;
		font-family: 'Playfair Display', Georgia, serif;
		font-size: clamp(30px, 5vw, 44px);
	}

	:global(.callout p) {
		margin: 0 0 32px;
		font-size: 18px;
		line-height: 1.7;
		max-width: 720px;
		margin-inline: auto;
	}

	:global(.callout .cta-primary) {
		background: #fffef6;
		color: #2f3e2d;
		box-shadow: none;
	}

	/* CTA Group for multiple buttons */
	:global(.cta-group) {
		display: flex;
		flex-wrap: wrap;
		gap: 16px;
	}

	/* Universal Hero Section Styles */
	:global(.hero) {
		display: grid;
		gap: 48px;
		align-items: center;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
	}

	:global(.hero-copy h1) {
		margin: 0;
		font-family: 'Playfair Display', Georgia, serif;
		font-size: clamp(40px, 6vw, 72px);
		letter-spacing: -0.02em;
	}

	:global(.eyebrow) {
		margin: 0;
		font-size: 14px;
		font-weight: 600;
		letter-spacing: 0.2em;
		text-transform: uppercase;
		color: #6b705c;
	}

	:global(.tagline) {
		margin: 16px 0 24px;
		font-size: clamp(22px, 3vw, 32px);
		font-weight: 600;
		color: #3a5a40;
	}

	:global(.lede) {
		margin: 0 0 32px;
		max-width: 620px;
		font-size: 18px;
		line-height: 1.65;
		color: #424b3a;
	}

	:global(.hero-visual) {
		position: relative;
		margin: 0;
	}

	:global(.hero-visual img) {
		width: 100%;
		display: block;
		border-radius: 28px;
		box-shadow: 0 24px 48px rgba(20, 34, 26, 0.3);
		object-fit: cover;
		aspect-ratio: 4 / 3;
	}

	@media (max-width: 720px) {
		:global(.cta-group) {
			flex-direction: column;
			align-items: flex-start;
		}

		:global(.callout) {
			padding-inline: 24px;
		}
	}
</style>
